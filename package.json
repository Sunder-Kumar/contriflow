{
  "name": "contriflow-cli",
  "version": "1.0.0",
  "description": "A GitHub automation tool to find and contribute to open-source projects with ease",
  "main": "src/index.js",
  "bin": {
    "contriflow": "src/index.js"
  },
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "echo 'No build step required for CLI'",
    "prepare": "echo 'Prepare step (husky hook)'"
  },
  "keywords": [
    "github",
    "automation",
    "open-source",
    "contributions",
    "cli",
    "beginner-friendly"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "inquirer": "^9.2.0",
    "ora": "^8.0.0",
    "axios": "^1.6.0",
    "fs-extra": "^11.2.0",
    "simple-git": "^3.21.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "transform": {},
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.js"],
    "collectCoverageFrom": ["src/**/*.js"],
    "coveragePathIgnorePatterns": ["/node_modules/"]
  }
}
